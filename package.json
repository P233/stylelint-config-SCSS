{
  "name": "stylelint-config-scss",
  "version": "2.0.0",
  "description": "Stylelint configs for SCSS syntax.",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "scss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/P233/stylelint-config-SCSS.git"
  },
  "author": "Peiwen Lu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/P233/stylelint-config-SCSS/issues"
  },
  "homepage": "https://github.com/P233/stylelint-config-SCSS#readme",
  "scripts": {
    "test": "jest",
    "watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "dependencies": {
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.15.0"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
